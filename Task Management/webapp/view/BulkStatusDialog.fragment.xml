<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="bulkStatusDialog"
		title="Change Status for Selected Tasks"
		contentWidth="400px">
		<content>
			<VBox class="sapUiMediumMargin">
				<Text text="Select new status for the selected tasks:" class="sapUiTinyMarginBottom"/>
				<Select
					id="bulkStatusSelect"
					width="100%"
					forceSelection="false">
					<items>
						<core:Item key="Pending" text="Pending"/>
						<core:Item key="In Progress" text="In Progress"/>
						<core:Item key="Completed" text="Completed"/>
					</items>
				</Select>
			</VBox>
		</content>
		<beginButton>
			<Button
				text="Update"
				type="Emphasized"
				press="onBulkStatusSave"/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onBulkStatusCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>

